
<div class="col-md-3">
  <%= link_to comment.user do %>
    <%= gravatar_for(comment.user, "comment-user-avartar") %>
    <%= comment.user.name %>
  <% end %>
</div>
<div class="col-md-9">
  <div class="row">
    <div class="col-md-10" id="content-<%= comment.id %>"><%= comment.content %></div>
    <div class="col-md-2">
      <%= render "shared/comment_panel", comment: comment %>
    </div>
  </div>
</div>
