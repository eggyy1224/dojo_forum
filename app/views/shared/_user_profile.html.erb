<div class="row user-profile">
    <div class="col-md-4 text-center">
      <ul>
        <li>
          <%= gravatar_for(user, "user-avartar") %>
        </li>
        <li>
          <%= user.name %>
        </li>
        <li>
          <% if user == current_user %>
            <%= link_to "編輯個人資料", edit_user_path(user), class: "btn btn-primary" %>
          <% else %>
            <%= render "shared/friend_button", user: user %>
          <% end %>
        </li>
      </ul>   
    </div>
    <div class="col-md-8">
      <%= user.description %>
    </div>
</div>