<h1>Add new article</h1>
<%= simple_form_for @article do |f| %>
  <%= f.input :title, label: "主題" %>
  <%= f.input :content, label: "內容", as: :text%>
  <%= f.input :auth, label: '誰可以看到', as: :radio_buttons, collection: [['全部', 'all'], ['朋友', 'friends'], ['我自己', 'self']] %>
  <%= f.association :categories, label: '分類', as: :check_boxes %>
  <%= f.button :submit, '提交', class: "btn btn-primary" %>
<% end %>